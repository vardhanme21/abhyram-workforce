<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Week_Start_Must_Be_Monday</fullName>
    <active>true</active>
    <errorConditionFormula>MOD(Week_Start_Date__c - DATE(1900, 1, 1), 7) != 0</errorConditionFormula>
    <errorMessage>Week start date must be a Monday</errorMessage>
</ValidationRule>