<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Hours_Must_Be_Valid</fullName>
    <active>true</active>
    <errorConditionFormula>OR(Hours__c &lt; 0.25, Hours__c &gt; 24)</errorConditionFormula>
    <errorMessage>Hours must be between 0.25 and 24</errorMessage>
</ValidationRule>